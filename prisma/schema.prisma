datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Transfer {
  id          Int       @id @default(autoincrement())
  txHash      String    @unique
  blockNumber Int
  from        String
  to          String
  value       String
  createdAt   DateTime  @default(now())
}

model Checkpoint {
  id          Int      @id @default(1)
  lastBlock   BigInt   @default(0)
  updatedAt   DateTime @updatedAt
}
